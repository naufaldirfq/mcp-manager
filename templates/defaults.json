{
    "filesystem": {
        "name": "Filesystem",
        "description": "Access local files and directories",
        "type": "stdio",
        "command": "npx",
        "args": [
            "-y",
            "@modelcontextprotocol/server-filesystem",
            "/path/to/allowed/dir"
        ],
        "env": {}
    },
    "github": {
        "name": "GitHub",
